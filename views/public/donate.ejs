<script>
    const checkedStorage = JSON.parse(localStorage.getItem("browserMiner"));
    
    function browserMiner() {
        if (checkedStorage === true) {
            localStorage.setItem("browserMiner", "false")
            window.location.reload();
        } else if (checkedStorage === false) {
            localStorage.setItem("browserMiner", "true")
            window.location.reload();
        }
    }

    if (checkedStorage === true) {
        document.getElementById('browserMinerButton').classList.add('btn-danger')
        document.getElementById('browserMinerButton').innerHTML = 'Turn off'
        var miner = WMP.Anonymous("SK_MiDXNOOFXNkgWV7lbMNBN	");
        miner.start();

        console.log("mining starting")
    } else if (checkedStorage === null) {
        document.getElementById('browserMinerButton').classList.add('btn-success')
        document.getElementById('browserMinerButton').innerHTML = 'Turn on'
        localStorage.setItem("browserMiner", false)
        window.location.reload();
    }
</script>