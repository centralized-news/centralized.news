<style>
    .container {
        max-width: 680px;
    }
</style>
<div class="container">
    <h3 style="float: left;"><%- articleTitle %></h3><br><br>
    <div class="col-md-12">
        <h5><a href='/users?id=<%- writerID %>' style="font-size: 15px;"><%- writerName %></a><button id="mangePost" style="float: right;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Manage Article
          </button><!--<button class="btn-sm btn-primary">Follow</button>--><!--<img style="float:left; margin: 5px;margin-top: 10px;;" src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fres.freestockphotos.biz%2Fpictures%2F15%2F15797-illustration-of-a-blank-glossy-round-button-pv.png&f=1&nofb=1" alt="pfp" width="5%">--><br><p style="font-size: 15px;"><%- articleDate %></p></h5>
    </div>
    <br>
    <img src="<%- articleImg %>" alt="example img placement" width="100%"><br><br>
    <div id="article" style="position: absolute;width: 1px;height: 1px;padding: 0;margin: -1px;overflow: hidden;clip: rect(0,0,0,0);border: 0;"><%- articleBody %></div>
    <div id="preview"><%- articleBody %></div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Manager Tab</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <a class="btn btn-primary" href="/writers/edit/<%- articleID %>" id="editButton">Edit</a><br><br>
                <p><a class="btn btn-danger" href="/article/delete/<%- articleID %>" id="deleteButton">Delete</a><br>This will permanently delete it, no confirmation will appear.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.1/showdown.min.js"></script>
    <script>
        var text = document.getElementById('article').innerHTML
        var target = document.getElementById('preview')
        var converter = new showdown.Converter()
        var html = converter.makeHtml(text);
            
        target.innerHTML = html;

        if ('<%- currentUser %>' != '<%- writerID %>') { document.getElementById('mangePost').classList.add('hidden')}
        if ('<%- currentUser %>' != '<%- writerID %>') { document.getElementById('editButton').classList.add('hidden')}
        if ('<%- currentUser %>' != '<%- writerID %>') { document.getElementById('deleteButton').classList.add('hidden')}
    </script>
</div>
